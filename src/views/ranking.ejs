<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Card Rankings</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('components/header') %>
    
    <div class="container">
        <h1>Current Card Rankings</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Card Name</th>
                    <th>Rating</th>
                    <th>Votes</th>
                </tr>
            </thead>
            <tbody>
                <% rankings.forEach(function(card) { %>
                    <tr>
                        <td><%= card.name %></td>
                        <td><%= card.rating %></td>
                        <td><%= card.voteCount %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <%- include('components/footer') %>
    <script src="/js/rankings.js"></script>
</body>
</html>