<div class="container py-4">
  <div class="row">
    <div class="explanation-text">
      Please be patient and keep voting while the Elo rating builds up.
    </div>
  </div>
  <div class="row gy-4">
    <div class="col-lg-4 col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-light">
          <h2 class="h5 mb-0">Top 20 Card Art</h2>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
              <thead>
                <tr>
                  <th scope="col" style="width: 50px" class="text-center">#</th>
                  <th scope="col">Card</th>
                  <th scope="col" class="text-end">Rating</th>
                </tr>
              </thead>
              <tbody>
                <% topCards.forEach((card, index) => { %>
                <tr>
                  <td class="text-center align-middle"><%= index + 1 %></td>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="card-thumbnail-container me-2">
                        <img
                          src="<%= getArtCropUrl(card.scryfallId) %>"
                          alt="<%= card.name %>"
                          class="rounded card-thumbnail"
                          style="width: 40px; height: 40px; object-fit: cover"
                          onerror="this.onerror=null; this.src='/api/card-back-thumb';"
                        />
                        <!-- Full card preview -->
                        <img
                          src="<%= getCardUrl(card.scryfallId) %>"
                          alt="<%= card.name %>"
                          class="card-full-preview"
                          loading="lazy"
                        />
                      </div>
                      <div>
                        <div class="fw-medium">
                          <a
                            href="https://scryfall.com/card/<%= card.scryfallId %>"
                            target="_blank"
                            rel="noopener noreferrer"
                          >
                            <%= card.name %>
                          </a>
                        </div>
                        <small class="text-muted"
                          ><%= card.artist || 'Unknown artist' %></small
                        >
                      </div>
                    </div>
                  </td>
                  <td class="text-end align-middle">
                    <%= card.formattedRating %>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-4 col-md-6">
